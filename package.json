{
  "name": "imap-criteria-transpiler",
  "version": "1.0.3",
  "description": "a library for transpiling intuitive queries into Imap criterias",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "lint:check": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "ts:check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Po Co (https://github.com/polnio)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polnio/imap-criteria-transpiler.git"
  },
  "bugs": {
    "url": "https://github.com/polnio/imap-criteria-transpiler/issues"
  },
  "homepage": "https://github.com/polnio/imap-criteria-transpiler#readme",
  "license": "MIT",
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.4.2",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.9.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  }
}
